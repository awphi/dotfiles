// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "vim_mode": false,
  "ui_font_family": "Hack Nerd Font Mono",
  "buffer_font_family": "Hack Nerd Font Mono",
  "icon_theme": "Material Icon Theme",
  "base_keymap": "JetBrains",
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "New Darcula"
  },
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "new-darcula": true,
    "material-icon-theme": true,
    "log": true,
    "graphql": true,
    "docker-compose": true,
    "svelte": true,
    "sql": true,
    "toml": true,
    "git-firefly": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "minimap": {
    "show": "never"
  },
  "experimental.theme_overrides": {
    // make the backgrounds slightly darker to increase contrast
    "editor.background": "#242526",
    "panel.background": "#242526",
    "terminal.background": "#0e0e0e",
    "toolbar.background": "#242526",
    "editor.gutter.background": "#242526"
  }
}
